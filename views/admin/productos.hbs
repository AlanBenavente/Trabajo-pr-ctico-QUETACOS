<div class="container" style="margin-top: 100px;">
    {{!--fila 1 --}}
    <div class="row">
        <div class="col">
            <p class="text-end"> Hola {{persona}}! <a href="/admin/login/logout" class="btn btn-danger">Cerrar sesi√≥n
                    <i class="fas fa-sign-out" aria-hidden="true"></i></a>
            </p>
        </div>
    </div>
    {{!-- fin fila 1 --}}
    {{!-- inicio de fila 2 --}}
    <div class="row">
        <div class="col-7" style="margin-top:-9px;">
            <h2>Listado de Productos</h2>
        </div>
        <div class="col-5 text-end">
            <a href="/admin/productos/agregar" class="btn btn-success"><i class="fas fa-plus"></i>Nuevo</a>
        </div>
    </div>
    {{!-- fin de fila 2 --}}

    {{!-- inicio de fila 3--}}

    <div class="row" style="margin-top: 18px;">
        <div class="col">
            <table class="table">
                <thead>
                    <tr class="table-dark">
                        <th scope="col">#</th>
                        <th scope="col">Titulo</th>
                        <th scope="col">Imagen</th>
                        <th scope="col" class="text-end">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each productos}}
                    <tr>
                        <th scope="row">{{id}}</th>
                        <td>{{titulo}}</td>
                        <td>{{{imagen}}}</td>
                        <td class="text-end">
                            <a href="/admin/productos/modificar/{{id}}" class="btn btn-secondary"><i class="fas fa-pencil-alt"></i></a>
                            <a href="/admin/productos/eliminar/{{id}}" class="btn btn-secondary"><i class="fas fa-trash"></i></a>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
    {{!-- fin de fila 3 --}}



</div>